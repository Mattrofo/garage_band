
<div class="container-index">


  <!----- H1 display --------->
  <div class="h1-index">
    <h1 >Plus de <%= @garages.count %> places de parking dans la zone recherchée</h1>
  </div>

  <!----- END H1 display --------->

  <!----- CARDS display --------->
  <div class="grid-index">
    <% @garages.each do |garage| %>
      <div class="d-flex justify-content-center">
        <%= link_to  garage_path(garage), class: "deco-none" do%>
        <div class="card-garage">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-garage-infos">
            <div>
              <h2><%= garage.titre%></h2>
              <p><%= garage.address %></p>
            </div>
             <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-garage-user avatar-bordered" />
            <div class="card-garage-princing">
              <h2><%= garage.price %>€</h2>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <!----- END CARDS display --------->


