
<div class="container-index">


  <!----- H1 display --------->
  <div class="h1-index">
    <h1 >Nous avons trouvé <%= pluralize(@garages.count, 'place') %> de parking dans la zone recherchée</h1>
  </div>

  <!----- END H1 display --------->


  <!----- SEARCH BAR display --------->

<div class="content">
  <div class="bouton-first">
    <div class="btn-rond">
      <%= link_to root_path, class: "btn-rond-back" do %>
        <i class="fa-sharp fa-solid fa-circle-left"></i>
      <% end %>
    </div>
    <div class="btn-rond">
      <%= link_to new_garage_path, class: "btn-rond-new" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
   </div>
  <div class="form-index">
      <%= form_with url: garages_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a Garage"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>

    <!----- SEARCH BAR display --------->




  <!----- CARDS display --------->

  <div class="grid-index">
    <% @garages.each do |garage| %>
      <div class="d-flex justify-content-center">
        <%= link_to  garage_path(garage), class: "deco-none" do%>
        <div class="card-garage">
          <%= cl_image_tag garage.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-garage-infos">
            <div>
              <h2><%= garage.titre%></h2>
              <p><%= garage.address %></p>
            </div>
             <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-garage-user avatar-bordered" />
            <div class="card-garage-princing">
              <h2><%= garage.price %>€</h2>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>

  <!----- END CARDS display --------->



