<%# // simple form for booking donner le garage id (coquille vide booking et garage plein)%>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h3>Nouvelle réservation</h3>
        <%= simple_form_for [@garage, @booking] do |f| %>
          <%= f.input :start_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year] %>
          <%= f.input :end_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year] %>
          <%= f.submit class: "btn-kaki"%>
        <% end %>

      </div>
    </div>
  </div>
</div>
