<h1>Show garage || au top les gars</h1>

<div class="container"><h1><%= @garage.titre %></h1></div>

<div class="container">
<%= link_to "Retour", garages_path, class: "nav-link" %>
<%= link_to "Modifier", edit_garage_path(@garage), class: "btn-blanc" if policy(@garage).destroy? %>
<%= link_to "Supprimer", garage_path(@garage), class: "btn-blanc", data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer ?" } if policy(@garage).destroy? %>
</div>


<%# // simple form for booking donner le garage id (coquille vide booking et garage plein)%>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h3>Nouvelle réservation</h3>
        <%= simple_form_for [@garage, @booking] do |f| %>
          <%= f.input :start_date, as: :date, start_year: Date.today.year, order: [:month, :year] %>
          <%= f.input :end_date, as: :date, start_year: Date.today.year, order: [:month, :year] %>
          <%= f.submit class: "btn-kaki"%>
        <% end %>

      </div>
    </div>
  </div>
</div>
